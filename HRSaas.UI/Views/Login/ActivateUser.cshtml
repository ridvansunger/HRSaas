@{ Layout = null;}
@model LoginVM
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>*@
    <link href="~/css/style.css" rel="stylesheet" />
    <title>
        login
    </title>
</head>

<body>
    <div id="container" class="container">
        <!-- FORM SECTION -->
        <div class="row">
            <!-- SIGN UP -->
            <div class="col align-items-center flex-col sign-up">
                <div class="form-wrapper align-items-center">
                    <form asp-action="ActivateUser" asp-controller="Login" method="post">
                        <input type="hidden" asp-for="FirstSingin" />
                        <div class="form sign-up">
                            @*<div class="input-group">
                                    <i class='bx bxs-user'></i>
                                    <input type="text" placeholder="Username">
                                </div>*@
                            <div class="input-group">
                                <i class='bx bx-mail-send'></i>
                                <input type="email" asp-for="Email" placeholder="Email">
                                <div style="text-align: left; margin-left: 0.5rem;">
                                    <span style="color: red; font-size: 0.7rem;" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="input-group">
                                <i class='bx bxs-lock-alt'></i>
                                <input type="password" asp-for="Password" placeholder="Yeni Şifre">
                                <div style="text-align: left; margin-left: 0.5rem;">
                                    <span style="color: red; font-size: 0.7rem;" asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="input-group">
                                <i class='bx bxs-lock-alt'></i>
                                <input type="password" asp-for="PasswordConfirm" placeholder="Yeni Şifre Onay">
                                <div style="text-align: left; margin-left: 0.5rem;">
                                    <span style="color: red; font-size:0.7rem;" asp-validation-for="PasswordConfirm"></span>
                                </div>
                            </div>
                            @*<div class="input-group">
                                    <i class='bx bxs-lock-alt'></i>
                                    <input type="password" placeholder="Confirm password">
                                </div>*@
                            <button type="submit">
                                Giriş Yap
                            </button>
                            <p>
                                <span>
                                    Mükemmel bir deneyim için...
                                </span>
                                @*<b onclick="toggle()" class="pointer">
                                        Giriş
                                    </b>*@
                            </p>
                        </div>
                    </form>
                </div>

                @*<div class="form-wrapper">
                        <div class="social-list align-items-center sign-up">
                            <div class="align-items-center facebook-bg">
                                <i class='bx bxl-facebook'></i>
                            </div>
                            <div class="align-items-center google-bg">
                                <i class='bx bxl-google'></i>
                            </div>
                            <div class="align-items-center twitter-bg">
                                <i class='bx bxl-twitter'></i>
                            </div>
                            <div class="align-items-center insta-bg">
                                <i class='bx bxl-instagram-alt'></i>
                            </div>
                        </div>
                    </div>*@
            </div>
            <!-- END SIGN UP -->
            <!-- SIGN IN -->
            <div class="col align-items-center flex-col sign-in">
                <form asp-action="Login" asp-controller="Login" method="post">
                    <div class="form-wrapper align-items-center">
                        <div class="form sign-in">
                            <div class="input-group">
                                <input asp-for="Email" type="text" placeholder="Email">
                                <div style="text-align: left; margin-left: 0.5rem;">
                                    <span style="color: red; font-size:0.7rem;" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="input-group">
                                <input asp-for="Password" type="password" placeholder="Şifre">
                                <div style="text-align:left; margin-left:0.5rem;">
                                    <span style="color:red; font-size:0.7rem;" asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <button type="submit">
                                Giriş Yap
                            </button>
                            <p>
                                <b>
                                    Mükemmel bir deneyim için...
                                </b>
                            </p>
                            @*<p>
                                    <b onclick="toggle()" class="pointer">
                                        Kurumsal Giriş
                                    </b>
                                </p>*@
                        </div>
                    </div>
                </form>
                @*<div class="form-wrapper">
                        <div class="social-list align-items-center sign-in">
                            <div class="align-items-center facebook-bg">
                                <i class='bx bxl-facebook'></i>
                            </div>
                            <div class="align-items-center google-bg">
                                <i class='bx bxl-google'></i>
                            </div>
                            <div class="align-items-center twitter-bg">
                                <i class='bx bxl-twitter'></i>
                            </div>
                            <div class="align-items-center insta-bg">
                                <i class='bx bxl-instagram-alt'></i>
                            </div>
                        </div>
                    </div>*@
            </div>
            <!-- END SIGN IN -->
        </div>
        <!-- END FORM SECTION -->
        <!-- CONTENT SECTION -->
        <div class="row content-row">
            <!-- SIGN IN CONTENT -->
            <div class="col align-items-center flex-col sign-in">
                <div class="text sign-in">
                    <h2>
                        Hoş Geldiniz
                    </h2>
                    <p>
                        HRSaaS Kullanıcı dostu arayüzü ile işlerinizin verimini arttırır...
                    </p>
                </div>
                <div class="img sign-in">
                    <img src="~/Data/LoginImages/undraw_different_love_a3rg.svg" />
                </div>
            </div>
            <!-- END SIGN IN CONTENT -->
            <!-- SIGN UP CONTENT -->
            <div class="col align-items-center flex-col sign-up">
                <div class="img sign-up ">
                    <img src="~/Data/LoginImages/undraw_creative_team_r90h.svg" />
                </div>
                <div class="text sign-up ">
                    <h2>
                        Bize Katılmanın İlk Adımı
                    </h2>
                    <p>
                        HRSaaS Kullanıcı dostu arayüzü ile işlerinizin verimini arttırır...
                    </p>
                </div>
            </div>
            <!-- END SIGN UP CONTENT -->
        </div>
        <!-- END CONTENT SECTION -->
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/index.js"></script>
    <script type="text/javascript">
        $(function () {
            var model = '@ViewBag.IsPassive';
            if (model == "true") {
                setTimeout(() => {
                    toggle();
                }, 200)
            }
        })
    </script>
</body>
</html>